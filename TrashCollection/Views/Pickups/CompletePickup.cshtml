@model TrashCollection.Models.Pickups

@{
    ViewBag.Title = "CompletePickup";
}

<hr />

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    @Html.HiddenFor(model => model.PickupId)
    @Html.HiddenFor(model => model.CustomerId)
    @Html.HiddenFor(model => model.IsCompleted)
    @Html.HiddenFor(model => model.CompleteTime)
    @Html.HiddenFor(model => model.Repeat)
    @Html.HiddenFor(model => model.Zipcode)
    @Html.HiddenFor(model => model.PickupCost)



    <div class="d-flex flex-column">
        <div class=" d-flex flex-row justify-content-center">

            <div class="card text-white bg-success mb-3" style="max-width: 20rem;">
                <div class="card-header">Pickup for @Html.DisplayFor(model => model.Customer.FullName)</div>
                <div class="card-body">
                    <h4 class="card-title">Confirm Pickup</h4>
                    <p class="card-text">Pickup Date: @Html.DisplayFor(model => model.PickupWeekDay) - @Html.DisplayFor(model => model.PickupDate)Fee: @Html.DisplayFor(model => model.PickupCost)<br />Address: @Html.DisplayFor(model => model.Customer.Address)</p>
                </div>
            </div>
        </div>
        <div class=" d-flex flex-row justify-content-center">
            <div class="form-group">

                <input type="submit" value="Complete" class="btn btn-success btn-lg" />
                &nbsp&nbsp
                @Html.ActionLink("Cancel", "Index", null, new { @class = "btn btn-danger btn-lg" })
            </div>


            
        </div>
    </div>
}


@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
